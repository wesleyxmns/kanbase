{
  "name": "kanbase",
  "version": "0.0.7",
  "description": "High-performance, enterprise-grade Kanban component for React with virtualization, advanced filtering, and fluid precision interactions",
  "type": "module",
  "main": "./dist/kanbase.umd.js",
  "module": "./dist/kanbase.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "assets",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/kanbase.es.js",
      "require": "./dist/kanbase.umd.js"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/index.d.ts"
      ]
    }
  },
  "sideEffects": [
    "./dist/kanbase.es.js",
    "./dist/kanbase.umd.js"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:lib": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "kanban",
    "kanban-board",
    "react",
    "react-component",
    "drag-and-drop",
    "virtualization",
    "typescript",
    "zustand",
    "dnd-kit",
    "task-management",
    "project-management",
    "workflow"
  ],
  "author": "wesleyxmns",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wesleyxmns/kanbase.git"
  },
  "bugs": {
    "url": "https://github.com/wesleyxmns/kanbase/issues"
  },
  "homepage": "https://github.com/wesleyxmns/kanbase#readme",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwindcss": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": false
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-virtual": "^3.13.17",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lodash.get": "^4.4.2",
    "lucide-react": "^0.562.0",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
